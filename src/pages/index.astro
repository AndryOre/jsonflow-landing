---
import '../styles/global.css';
import { Button, Badge, BorderBeam, Separator } from '@/components';
import { Github, Workflow, Menu, Book, LifeBuoy } from 'lucide-react';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro + TailwindCSS</title>
	</head>

	<body class="dark">
		<div
			class="absolute top-0 z-[-2] h-screen w-full dark:bg-neutral-950
             dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(23,37,84,1),rgba(255,255,255,0))] bg-neutral-50 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(239,246,255,1),rgba(0,0,0,0))]">
		</div>
		<div class="container mx-auto">
			<header
				class="sticky top-4 w-fit justify-self-center flex-row items-center justify-between gap-16 bg-neutral-100/75 dark:bg-neutral-900/75 py-2 px-4 rounded-md backdrop-blur-md z-10 border border-neutral-200 dark:border-neutral-800 hidden md:flex">
				<div class="flex flex-row gap-2">
					<Workflow />
					<span class="font-bold text-lg">JSON Flow</span>
				</div>
				<nav class="flex gap-6">
					<Button
						client:load
						disabled
						tooltip="Coming soon"
						variant="link"
						className="text-muted-foreground p-0 hover:no-underline hover:text-blue-500"
						>Features</Button
					>
					<Button
						client:load
						disabled
						tooltip="Coming soon"
						variant="link"
						className="text-muted-foreground p-0 hover:no-underline hover:text-blue-500"
						>How It Works</Button
					>
					<Button
						client:load
						disabled
						tooltip="Coming soon"
						variant="link"
						className="text-muted-foreground p-0 hover:no-underline hover:text-blue-500"
						>Use Cases</Button
					>
					<Button
						client:load
						disabled
						tooltip="Coming soon"
						variant="link"
						className="text-muted-foreground p-0 hover:no-underline hover:text-blue-500"
						>Team</Button
					>
				</nav>
				<a
					href="https://marketplace.visualstudio.com/items?itemName=imgildev.vscode-json-flow"
					target="_blank">
					<Button>Install on VS Code</Button>
				</a>
			</header>

			<header
				class="sticky top-4 justify-self-center flex-row items-center justify-between bg-neutral-900/75 p-2 rounded-md backdrop-blur-md z-10 border border-neutral-800 flex md:hidden gap-8 w-9/10">
				<div class="flex flex-row gap-2">
					<Workflow />
					<span class="font-bold text-lg">JSON Flow</span>
				</div>
				<Button variant="outline" size="icon">
					<Menu />
				</Button>
			</header>

			<main>
				<section
					id="hero"
					class="flex flex-col items-center justify-center px-4 py-8 sm:p-8 md:p-16 lg:p-24 gap-8 md:gap-16 lg:gap-32 h-auto">
					<div class="flex flex-col items-center gap-4 md:gap-8">
						<Badge
							variant="outline"
							className="text-sm md:text-md relative overflow-hidden">
							<BorderBeam
								client:load
								className="from-transparent via-neutral-500 to-transparent"
							/>
							Free & Open Source
						</Badge>
						<span
							class="text-muted-foreground text-base md:text-lg text-center">
							Trusted by over 20,000 developers around the world.
						</span>
						<h1
							class="text-4xl md:text-5xl lg:text-7xl font-bold max-w-2xl text-center">
							Visualize your data like never before
						</h1>
						<h2 class="text-lg md:text-xl font-medium text-center px-4">
							A powerful VS Code extension to turn your JSON, YAML, XML, and CSV
							files into interactive graphs.
						</h2>
						<div
							class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto px-4 sm:px-0">
							<a
								href="https://marketplace.visualstudio.com/items?itemName=imgildev.vscode-json-flow"
								target="_blank"
								class="w-full sm:w-auto">
								<Button size="lg" className="w-full sm:w-auto">
									Install for Free on VS Code
								</Button>
							</a>
							<a
								href="https://github.com/ManuelGil/vscode-json-flow"
								target="_blank"
								class="w-full sm:w-auto">
								<Button
									variant="outline"
									size="lg"
									className="w-full sm:w-auto">
									<Github /> Star on GitHub
								</Button>
							</a>
						</div>
					</div>
					<figure>
						<img
							src="https://raw.githubusercontent.com/ManuelGil/vscode-json-flow/main/images/json-flow-1.gif"
							alt="JSON Flow Demo"
							class="w-full rounded-lg border border-blue-500/50 shadow-[0px_0px_10px_2px_rgba(37,99,235,1)]"
						/>
					</figure>
				</section>
			</main>
			<footer class="px-8">
				<Separator />
				<div
					class="flex flex-col md:flex-row items-center md:justify-between py-4 gap-4">
					<p
						class="text-muted-foreground text-center md:text-left items-center gap-2">
						Made by developers for <span class="inline-flex items-center gap-2"
							>developers with <img
								src="https://raw.githubusercontent.com/Tarikul-Islam-Anik/Animated-Fluent-Emojis/master/Emojis/Smilies/Red%20Heart.png"
								alt="Red Heart"
								width="25"
								height="25"
							/>
						</span>
					</p>
					<nav
						class="flex md:gap-6 text-muted-foreground flex-col md:flex-row items-center gap-2">
						<a
							href="https://github.com/ManuelGil/vscode-json-flow/"
							target="_blank"
							class="hover:text-primary transition-colors hover:underline inline-flex items-center gap-1">
							<Github className="size-4" />GitHub
						</a>
						<a
							href="https://github.com/ManuelGil/vscode-json-flow/wiki"
							target="_blank"
							class="hover:text-primary transition-colors hover:underline inline-flex items-center gap-1">
							<Book className="size-4" />Docs
						</a>
						<a
							href="https://github.com/ManuelGil/vscode-json-flow/issues"
							target="_blank"
							class="hover:text-primary transition-colors hover:underline inline-flex items-center gap-1">
							<LifeBuoy className="size-4" />Support
						</a>
					</nav>
				</div>
			</footer>
		</div>
	</body>
</html>
